{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "typeRoots": [
      "./node_modules/@types",
    ],
    "types": [
      "node",
    ]
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs"
  ]
}
